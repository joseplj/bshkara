@using PagedList.Mvc
@model Bshkara.Web.ViewModels.PacksViewModel

@{
    ViewBag.Title = "Welcome to bshkara";
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
}

<div class="jumbotron" style="background-color:transparent">
    <h1>Bshkara</h1>
    <p class="lead">Welcome to Bshkara, maids agancies services.</p>
</div>

<div class="row">

    @foreach (var item in Model.Items.ToList())
    {

        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <!--begin: widget 1-3 -->
            <div class="details widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
                <div class="widget-thumb-body">
                    <span class="widget-thumb-body-stat">@item.Price $</span>
                </div>
                <div class="mt-body">
                    
                    <h3 class="mt-username">@item.Name</h3>

                    <p class="mt-user-title">@item.Description </p>

                    <div class="mt-stats">
                        <div class="btn-group btn-group btn-group-justified">
                            <a href="javascript:;" class="btn font-yellow">
                                <i class="fa fa-female"></i> @item.ListingCount
                            </a>
                            <a href="javascript:;" class="btn font-red">
                                <i class="fa fa-user"></i> @item.UsersCount
                            </a>
                            <a href="javascript:;" class="btn font-green">
                                <i class="fa fa-calendar"></i> @item.Duration
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>