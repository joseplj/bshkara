@using Bshkara.Web.Extentions
@model Bshkara.Core.Entities.AgencyPackageEntity

@{
    Model.AgencyId = Model.AgencyId == Guid.Empty ? (Guid)ViewBag.AgencyId : Model.AgencyId;
}

<div class="row">
    <div class="col-md-12 ">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-red-sunglo">
                    <i class="fa fa-language"></i>
                    <span class="caption-subject bold uppercase"> Default Form</span>
                </div>
            </div>
            <div class="portlet-body form">
                <div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="hpanel">
                                @if (ViewData.ModelState.HasNotPropertyErrors())
                                {
                                    <div class="alert alert-danger">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>
                                }
                                <div class="panel-body">
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.Id)
                                    @Html.HiddenFor(model => model.AgencyId)
                                    @Html.HiddenFor(model => model.CreatedById)
                                    @Html.HiddenForDateTime("CreatedAt", @Model.CreatedAt)
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Package, htmlAttributes: new {@class = "control-label col-md-2"})
                                        <div class="col-md-10">
                                            @Html.DropDownList("PackageId", null, "-- choose package --", htmlAttributes: new {@class = "form-control"})
                                            @Html.ValidationMessageFor(model => model.PackageId, "", new {@class = "text-danger"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PackageStatus, new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EnumDropDownListFor(t => t.PackageStatus, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.PackageStatus, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="row">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button type="submit" class="btn green">
                                                <i class="fa fa-check"></i> Save
                                            </button>
                                            <button type="button" onclick="history.go(-1);" class="btn default">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
