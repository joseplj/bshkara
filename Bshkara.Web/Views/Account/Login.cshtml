<div class="col-md-4">
    <section id="socialLoginForm">
        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
    </section>
</div>
    -->

</div>
<!-- END LOGIN -->
<div class="copyright">@BshkaraRes.Copyright</div>

@section Plugins {
    @Scripts.Render("~/LoginPlugins/js")
}