@using Bshkara.Web.Extentions
@model Bshkara.Core.Entities.AgencyUserEntity

@{
    Model.AgencyId = Model.AgencyId == Guid.Empty ? (Guid)ViewBag.AgencyId : Model.AgencyId;
}

<div class="row">
    <div class="col-md-12 ">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-red-sunglo">
                    <i class="fa fa-user"></i>
                    <span class="caption-subject bold uppercase"> Agency users</span>
                </div>
            </div>
            <div class="portlet-body form">
                <div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="hpanel">
                                @if (ViewData.ModelState.HasNotPropertyErrors())
                                {
                                    <div class="alert alert-danger">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>
                                }
                                <div class="panel-body">
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.Id)
                                    @Html.HiddenFor(model => model.AgencyId)
                                    @Html.HiddenFor(model => model.CreatedById)
                                    @Html.HiddenForDateTime("CreatedAt", @Model.CreatedAt)

                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.User.Email, new { @class = "control-label visible-ie8 visible-ie9" })
                                        @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control", @placeholder = BshkaraRes.Login_Email })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.User.Password, new {@class = "control-label visible-ie8 visible-ie9"})
                                        @Html.PasswordFor(m => m.User.Password, new {@class = "form-control", @placeholder = BshkaraRes.Login_Password})
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.User.ConfirmPassword, new { @class = "control-label visible-ie8 visible-ie9" })
                                        @Html.PasswordFor(m => m.User.ConfirmPassword, new { @class = "form-control", @placeholder = BshkaraRes.Login_ConfirmPassword })
                                    </div>

                                    <div class="form-actions">
                                        <button type="submit" class="btn green uppercase" style="width: 100%">@BshkaraRes.Register_Register</button>
                                    </div>

                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group m-b-none">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button class="btn btn-info" type="submit"><i class="fa fa-check"></i>Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
