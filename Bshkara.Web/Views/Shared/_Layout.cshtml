@using Bshkara.Web.Extentions
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->

<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8"/>
    <title>Bashkara - @ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport"/>

    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css"/>
    @Styles.Render("~/GlobalMandatoryStyle/css")
    <link href="/Assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css" rel="stylesheet" type="text/css">
    <!-- END GLOBAL MANDATORY STYLES -->

    <!-- BEGIN THEME GLOBAL STYLES -->
    @Styles.Render("~/ThemeGlobalStyle/css")
    <!-- END THEME GLOBAL STYLES -->

    <!-- BEGIN THEME LAYOUT STYLES -->
    @Styles.Render("~/Theme4/css")
    <!-- END THEME LAYOUT STYLES -->

    <!-- BEGIN LAYOUT STYLES -->
    @if (IsSectionDefined("Styles"))
    {
        @RenderSection("styles", false)
    }
    <!-- END LAYOUT STYLES -->

    <!-- BEGIN PAGE LEVEL STYLES -->
    @Styles.Render("~/BasePageStyle/css")
    <!-- END BEGIN PAGE LEVEL STYLES -->

    <!-- BEGIN FIX LAYOUT STYLES -->
    @Styles.Render("~/Content/css")
    <!-- END FIX LAYOUT STYLES -->

    <link rel="shortcut icon" href="favicon.ico"/>
</head>


<body class="@Html.PageClass() page-container-bg-solid page-header-fixed page-sidebar-closed-hide-logo">
<!-- BEGIN HEADER -->
@Html.Partial("_Header")
<!-- END HEADER -->

<!-- BEGIN HEADER & CONTENT DIVIDER -->
<div class="clearfix"> </div>
<!-- END HEADER & CONTENT DIVIDER -->

<!-- BEGIN CONTAINER -->
<div class="page-container">
    <!-- BEGIN SIDEBAR -->
    @Html.Partial("_Sidebar")
    <!-- END SIDEBAR -->

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content" style="min-height: 1185px;">
            <!-- BEGIN PAGE BASE CONTENT -->
            @RenderBody()
            <!-- END PAGE BASE CONTENT -->
        </div>
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->

</div>
<!-- END CONTAINER -->

<!-- BEGIN CORE PLUGINS -->
@Scripts.Render("~/CorePluginsScripts/js")
<!-- END CORE PLUGINS -->

<!-- BEGIN LAYOUT PLUGINS -->
@Scripts.Render("~/LoginPlugins/js")
@RenderSection("plugins", false)
<!-- END LAYOUT PLUGINS --

<!-- BEGIN THEME GLOBAL SCRIPTS -->
@Scripts.Render("~/ThemeGlobalScripts/js")
<!-- END THEME GLOBAL SCRIPTS -->

<!-- BEGIN PAGE LEVEL SCRIPTS -->
@Scripts.Render("~/BasePageScripts/js")
<!-- END BEGIN PAGE LEVEL SCRIPTS -->

<!-- BEGIN LAYOUT SCRIPTS -->
<script src="/Assets/layouts/layout4/scripts/layout.min.js" type="text/javascript"></script>
<script src="/Assets/layouts/layout4/scripts/demo.min.js" type="text/javascript"></script>
<script src="/Assets/layouts/global/scripts/quick-sidebar.min.js" type="text/javascript"></script>
<script src="/Assets/layouts/global/scripts/quick-nav.min.js" type="text/javascript"></script>

@RenderSection("scripts", false)
<!-- END LAYOUT SCRIPTS -->

</body>

</html>